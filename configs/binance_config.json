{
  "name": "币安数字货币交易配置",
  "description": "币安交易所API配置和数字货币交易参数",
  "market": "crypto",
  "exchange": "binance",
  
  "api_config": {
    "base_url": "https://api.binance.com",
    "testnet_base_url": "https://testnet.binance.vision",
    "websocket_url": "wss://stream.binance.com:9443/ws",
    "testnet_websocket_url": "wss://testnet.binance.vision/ws",
    "timeout": 30,
    "rate_limit": {
      "requests_per_minute": 1200,
      "order_requests_per_second": 10,
      "order_requests_per_day": 100000
    }
  },

  "trading_config": {
    "testnet_enabled": true,
    "default_symbol": "BTCUSDT",
    "supported_symbols": [
      "BTCUSDT",
      "ETHUSDT", 
      "BNBUSDT",
      "ADAUSDT",
      "DOTUSDT",
      "XRPUSDT",
      "LTCUSDT",
      "LINKUSDT",
      "BCHUSDT",
      "XLMUSDT"
    ],
    "order_types": ["MARKET", "LIMIT", "STOP_LOSS", "STOP_LOSS_LIMIT", "TAKE_PROFIT", "TAKE_PROFIT_LIMIT"],
    "time_in_force": ["GTC", "IOC", "FOK"],
    "default_order_config": {
      "type": "LIMIT",
      "time_in_force": "GTC",
      "quantity_precision": 6,
      "price_precision": 2
    }
  },

  "risk_management": {
    "max_position_size": 10000.0,
    "max_daily_loss": 1000.0,
    "stop_loss_percentage": 5.0,
    "take_profit_percentage": 10.0,
    "max_open_orders": 10,
    "position_sizing": {
      "method": "fixed_amount",
      "fixed_amount": 100.0,
      "risk_percentage": 2.0
    }
  },

  "market_data_config": {
    "default_interval": "1h",
    "supported_intervals": ["1m", "3m", "5m", "15m", "30m", "1h", "2h", "4h", "6h", "8h", "12h", "1d", "3d", "1w", "1M"],
    "kline_limit": 100,
    "orderbook_depth": 20,
    "websocket_streams": [
      "trade",
      "ticker", 
      "bookTicker",
      "kline_1h",
      "depth20"
    ]
  },

  "strategy_config": {
    "enabled_strategies": [
      "momentum",
      "mean_reversion", 
      "breakout",
      "grid_trading"
    ],
    "default_strategy": "momentum",
    "strategy_parameters": {
      "momentum": {
        "lookback_period": 20,
        "momentum_threshold": 0.02
      },
      "mean_reversion": {
        "z_score_threshold": 2.0,
        "window": 50
      },
      "breakout": {
        "breakout_period": 20,
        "volume_confirmation": true
      },
      "grid_trading": {
        "grid_levels": 10,
        "grid_spacing": 0.01
      }
    }
  },

  "notification_config": {
    "enabled": true,
    "channels": ["websocket", "log"],
    "events": [
      "order_filled",
      "order_cancelled", 
      "position_closed",
      "stop_loss_triggered",
      "take_profit_triggered"
    ]
  },

  "logging_config": {
    "log_level": "INFO",
    "log_file": "./data/binance_trading.log",
    "max_log_size": "10MB",
    "backup_count": 5,
    "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },

  "security_config": {
    "enable_ip_whitelist": false,
    "whitelisted_ips": [],
    "enable_2fa": false,
    "api_key_rotation_days": 90,
    "max_api_calls_per_minute": 1200
  },

  "environment_variables": {
    "BINANCE_API_KEY": "YOUR_BINANCE_API_KEY",
    "BINANCE_API_SECRET": "YOUR_BINANCE_API_SECRET", 
    "BINANCE_TESTNET": "true",
    "BINANCE_RECV_WINDOW": "5000"
  },

  "setup_instructions": {
    "step1": "在币安官网注册账户并完成身份验证",
    "step2": "创建API密钥，确保启用现货交易权限",
    "step3": "设置环境变量：export BINANCE_API_KEY='your_key'",
    "step4": "测试连接：python -c \"from agent_tools.tool_binance import get_binance_price; print(get_binance_price('BTCUSDT'))\"",
    "step5": "建议使用测试网络进行开发：设置 BINANCE_TESTNET=true"
  },

  "disclaimer": {
    "risk_warning": "数字货币交易涉及高风险，可能导致资金损失。请谨慎投资，只使用您能承受损失的资金。",
    "testnet_recommendation": "强烈建议先在测试网络进行充分测试，熟悉交易规则和API操作。",
    "api_security": "请妥善保管API密钥，不要分享给他人，定期更换密钥。"
  }
}